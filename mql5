        // Determine the original value of the price before the gap occurred
        double currentPrice = SymbolInfoDouble(_Symbol, SYMBOL_BID);
        double gapSize = GetGapSize();
        double originalValue = DetermineOriginalValue(currentPrice, gapSize);
        
